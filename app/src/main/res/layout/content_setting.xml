<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SettingActivity"
    tools:showIn="@layout/activity_setting">



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#615E5E" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="60dp"
                android:orientation="horizontal"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Tilni tanlsh"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#212122"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Uz"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#212122" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="14dp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#212122" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tungi rejim"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="#f234"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="26dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#fff" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Tungi rejimga o'tish"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#48584A" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#1D1F1F" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="A a"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="#48584A"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="31dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#fff" />

                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="Hariflarni kattalashtirish"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#48584A" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#232423" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />


    </LinearLayout>


